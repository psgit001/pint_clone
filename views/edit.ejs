<%include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-5">
    <h1 class="text-xl">Create New Post.</h1>
    <hr class="opacity-10 mt-3">

    <form action="/edit" method="POST">
      <label class="text-white block w-1/3 px-6 py-2 " for="newUsername">New Username:</label>
      <input class="text-black block w-1/3 px-6 py-2 " type="text" id="newUsername" name="newUsername" value="<%= user.username %>" required>
      <button class="text-white block w-1/3 px-10 py-2 mt-2 rounded-md bg-red-700" type="submit">Update Username</button>
      
  </form>

</div>  

